#!/bin/bash

export PYTHONPATH=@PYTHON_INSTALL_DIR@:$PYTHONPATH
export LD_LIBRARY_PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@:$LD_LIBRARY_PATH
export PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@:$PATH

echo "export PYTHONPATH=@PYTHON_INSTALL_DIR@:\$PYTHONPATH" >> ~/.bashrc
echo "export LD_LIBRARY_PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@:\$LD_LIBRARY_PATH" >> ~/.bashrc
echo "export PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@:\$PATH" >> ~/.bashrc

